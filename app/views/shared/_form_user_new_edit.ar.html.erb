<div class="ui middle aligned center aligned grid" dir="rtl" lang="ar" >
  <div class="column">
    <h2 class="ui image header" >
    <div class="column"><img src="<%= asset_path 'wilaya.png' %>" class="image" height="110" width="110" style="margin: 0 auto;"></div>
      
      <div class="white" >
        <%= header_text(@update) %>
      </div>
    </h2>
</div>
</div>



<div class="ui raised segment articles" style="margin: 60px 400px; background: rgb(246, 227, 186);">

  <h4 class="ui right dividing large header"><%= t :shipping_information %></h4>


    <%= form_for(@user, html: { class: 'ui form', style:"overflow:hidden;" }) do |f| %>

<div class="article_errors"><div style="margin: 10px 400px -50px 400px;"><%= render 'shared/error_massages', object: f.object %> </div></div>

    <div class="required field">
    <%= f.label :name, t(:name), style: "float:right;" %>
    <%= f.text_field :name, placeholder: "Full name", type: 'text'%>
    </div>

    <div class="required field">
    <%= f.label :email, t(:email), style: "float:right;" %>
    <%= f.email_field :email, placeholder: "Foobar@example.com", type: 'email' %>
    </div>

    <div class="required field">
    <%= f.label :password, t(:password), style: "float:right;" %>
    <%= f.password_field :password, placeholder: "Password", type: 'password' %>
    </div>

    <div class="required field">
    <%= f.label :password_confirmation, t(:password_confirmation), style: "float:right;" %>
    <%= f.password_field :password_confirmation, placeholder: "Retype password", type: 'password' %>
    </div>

    <div class="fileld" style="margin-bottom: 20px;">
     <% if @update %>
        <a href="http://gravatar.com/emails" target=_blank style="float: right;"><u>
        <%= t :change_profil_picture %></u></a>
     <% end %>

</div>

   
    
    <% form_button_text(@update) do |i|  %>
    <%= f.submit t("#{i}"), class: "ui fluid blue button" %>
     <% end %>

           
    <% end %>



</div>