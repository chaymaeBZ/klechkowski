<li class="list-group-item clearfix">
  <%= link_to conversation.subject, conversation_path(conversation) %>


  <div class="btn-group-vertical pull-right">
  	<% if conversation.is_trashed?(current_user) %>
  		<%= link_to 'Restore', restore_conversation_path(conversation), class: "ui mini primary button", method: :post %>
  	<% else %>
  		<%= link_to 'Move to trash', conversation_path(conversation), class: "ui mini negative button", method: :delete %>
  		<% if conversation.is_unread?(current_user) %>
	      <%= link_to 'Mark as read', mark_as_read_conversation_path(conversation),
	                  class: 'ui mini primary button', method: :post %>
	    <% end %>
  	<% end %>
  </div>

<p><%= render 'conversations/participants', conversation: conversation %></p>

  <p><%= truncate conversation.last_message.body, length: 170 %>
    <small>(<span class="text-muted"><%= conversation.last_message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></span>)</small></p>





</li>

