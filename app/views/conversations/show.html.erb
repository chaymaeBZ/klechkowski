<div class="ui raised segment articles" style="margin: 60px 400px; background: rgb(246, 227, 186);">

  <h4 class="ui dividing large header">Conversation</h4>
  <div class="ui segment">
<p>
	Chatting with
	<%= render 'conversations/participants', conversation: @conversation %>
</p>
  	<%= @conversation.subject %>


  	
  	<% @conversation.receipts_for(current_user).each do |receipt| %>
  	<% message = receipt.message %>
	  	<div class="ui comments">
	  		<div class="ui feed">
	  			<div class="event">
				    
				    	<div class="ui tiny circular image" style="width: 10%; margin-right: 10px;">
				    		<%= gravatar_for message.sender %>
				    	</div>
				      
				   
				    <div class="content">
				      <div class="summary">
				        <a><%= message.sender.name %></a> says at
				        <div class="date">
				          <%= message.created_at.strftime("%-d %B %Y, %H:%M:%S") %>
				        </div>
				      </div>
				      <div class="extra text">
				       <%= message.body %>
				      </div>
				    </div>
				  </div>
	  		</div>
	  		
	  	</div>
		<% end %>
	<%= form_tag reply_conversation_path(@conversation), method: :post, class: "ui form" do %>
	<div class="field">
		<%= text_area_tag 'body', nil, placeholder: "type something ...", required: true %>
	</div>
	<%= submit_tag "Send message", class: "ui submit button" %>
	<% end %>
  </div>
</div>



 