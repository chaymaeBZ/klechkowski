<% provide(:title, 'Sign up') %>
<div dir="rtl" lang="ar" class="new">
<div class="ui middle aligned center aligned grid" >
  <div class="column">
    <h2 class="ui image header" >
    <div class="column"><img src="<%= asset_path 'wilaya.png' %>" class="image" height="110" width="110" style="margin: 0 auto;"></div>
      
      <div class="white" >
       <%= t :reservé_employé_wilaya %>
      </div>
    </h2>
</div>
</div>
<div style="margin: 10px 400px -50px 400px;"><%= render 'shared/flash_message' %></div>

<div class="ui segments" style="margin: 60px 400px; ">
<div class="ui segment" style="background: rgb(246, 227, 186);">


  <h4 class="ui right dividing large header"><%= t :login %></h4>

    <%= form_for(:session, url: login_path, html: { class: 'ui form', style: "overflow:hidden;" }) do |f| %>



    <div class="field">
    <%= f.label :email, t(:email), style: "float:right;" %>
    <%= f.text_field :email, placeholder: "foobar@example.com", type: 'email'%>
    </div>


    <div class="field"> 
    <%= f.label :password, t(:password), style: "float:right;" %>
    <%= f.password_field :password, placeholder: "Password", type: 'password' %>
    </div>

    <div class="field" style="float:right;">
    <div class="ui checkbox">
	<%= f.check_box :remember_me, class: "hidden" %>
    <%= f.label :remember_me, t(:remember_me) %>
	</div>
	</div>

    <%= f.submit t(:login), class: "ui fluid blue button" %>
    <% end %>
</div>
<div class="ui segment orange" style="overflow:hidden;">
  <i class="icon help" style="float:right;"></i>
  <%= link_to t(:password_forgotten), new_password_reset_path, style: "float:right;" %>
</div>
 



</div>